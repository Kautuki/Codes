class Solution {
    public int removeElement(int[] nums, int val) {
        
        
          int i = 0;
    for (int j = 0; j < nums.length; j++) {
        if (nums[j] != val) {
            nums[i] = nums[j];
            i++;
        }
    }
    return i;
        
 /*       int count=0;
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]==val)
            {
                count++;
                nums[i]=0;
            }
        }
      for(int i=0;i<nums.length;i++)
      {
          for(int j=0;j<nums.length-1-i;j++)
          {
              if(nums[j]<nums[j+1])
              {
                  int temp=nums[j];
                  nums[j]=nums[j+1];
                  nums[j+1]=temp;
              }
          }
      }
        int t=nums.length - count;
        return t;*/
        
    }
}
